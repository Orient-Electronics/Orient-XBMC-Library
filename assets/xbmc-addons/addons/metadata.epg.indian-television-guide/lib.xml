<?xml version="1.0" encoding="UTF-8"?>
<scraper framework="1.1" date="2012-01-16">
	<CreateSearchUrl dest="3">
		<RegExp input="$$1" output="&lt;url&gt;http://indian-television-guide.appspot.com&lt;/url&gt;" dest="3">
			<RegExp input="$$2" output="\1" dest="4">
				<expression clear="yes">(.+)</expression>
			</RegExp>
			<expression noclean="1" />
		</RegExp>
	</CreateSearchUrl>
	<NfoUrl dest="3">
	</NfoUrl>
	<GetSearchResults dest="8">
		<RegExp input="$$5" output="&lt;results&gt;\1&lt;/results&gt;" dest="8">
			<RegExp input="$$1" output="&lt;entity&gt;&lt;title&gt;\1&lt;/title&gt;&lt;id&gt;\1&lt;/id&gt;&lt;url&gt;http://indian-television-guide.appspot.com/indian_television_guide?channel=\1&amp;amp;date=$$4&lt;/url&gt;&lt;/entity&gt;" dest="5">
				<expression repeat="yes" trim="1">&lt;div class=&quot;channel&quot;&gt;([\s\S]*?)&lt;\/div&gt;</expression>
			</RegExp>
			<expression noclean="1" />
		</RegExp>
	</GetSearchResults>
	
	<GetDetails dest="3">
		<!-- Extracting Date -->
		<RegExp input="$$1" output="\3\2\1" dest="4">
				<expression>&quot;date&quot;: &quot;([0-9][0-9])([0-9][0-9])([0-9][0-9][0-9][0-9])&quot;,</expression>
		</RegExp>
		<RegExp input="$$7" output="&lt;results&gt;\1&lt;/results&gt;" dest="8">
		
			<RegExp input="$$1" output="&lt;chain function=&quot;GetITGShowDetailsChain&quot;&gt;$$4\1&lt;/chain&gt;" dest="7">
				<expression repeat="yes">(&quot;showTitle&quot;[^}]*)</expression>
			</RegExp>
		
			<expression noclean="1">([\s\S]*)</expression>
		</RegExp>
	</GetDetails>
	
	<GetITGShowDetailsChain clearbuffers="no" dest="5">
		
		<RegExp input="$$1" output="&lt;title&gt;\1&lt;/title&gt;" dest="6">
			<expression>&quot;showTitle&quot;: &quot;([^&quot;]*)&quot;,</expression>
		</RegExp>
		
		<RegExp input="$$1" output="&lt;start&gt;\1\2\3\4 +0530&lt;/start&gt;" dest="6+">
			<expression>(\d{8})[\s\S]*&quot;showTime&quot;: &quot;(\d{2}):(\d{2}):(\d{2})&quot;,</expression>
		</RegExp>
		
		<RegExp input="$$1" output="&lt;thumb&gt;\1&lt;/thumb&gt;" dest="6+">
			<expression>&quot;showThumb&quot;: &quot;(.*)&quot;,</expression>
		</RegExp>
		
		<RegExp input="$$1" output="&lt;type&gt;\1&lt;/type&gt;" dest="6+">
			<expression>&quot;Show Type:&quot;: &quot;(.*)&quot;,</expression>
		</RegExp>
		
		<RegExp input="$$1" output="&lt;release&gt;\1&lt;/release&gt;&lt;country&gt;\2&lt;/country&gt;" dest="6+">
			<expression>&quot;Release Date&quot;: &quot;(.*) \((.*)\)&quot;,</expression>
		</RegExp>
		
		<!-- Cast -->
		<RegExp input="$$1" output="\1," dest="7">
			<expression repeat="yes" >&quot;Cast&quot;: &quot;(.*)&quot;,</expression>
		</RegExp>
		
		<RegExp input="$$7" output="&lt;actor&gt;&lt;name&gt;\1&lt;/name&gt;&lt;/actor&gt;" dest="6+">
			<expression repeat="yes" >([^,]*),</expression>
		</RegExp>
		
		<!--
		<RegExp input="$$1" output="&lt;chain function=&quot;GetITGCastChain&quot;&gt;\1,&lt;/chain&gt;" dest="6+">
			<expression>&quot;Cast&quot;: &quot;(.*)&quot;,</expression>
		</RegExp>
		-->
	
		<RegExp input="$$1" output="&lt;programme&gt;$$6&lt;/programme&gt;" dest="5">
			<expression />
		</RegExp>
	</GetITGShowDetailsChain>
	
	
	<GetITGCastChain dest="5">
		<RegExp input="$$6" output="&lt;actor&gt;\1&lt;/actor&gt;" dest="5">
			<RegExp input="$$1" output="&lt;name&gt;\1&lt;/name&gt;" dest="6">
				<expression>([^,]*),</expression>
			</RegExp>
			<expression repeat="yes" />
		</RegExp>
	</GetITGCastChain>
</scraper>
