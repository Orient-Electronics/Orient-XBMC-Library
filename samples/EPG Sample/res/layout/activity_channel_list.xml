<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orient.app.epgsample.ChannelListActivity"
    tools:ignore="MergeRootFrame">
    
    <include layout="@layout/state_loading"
        android:id="@+id/channelListLoadingState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <include layout="@layout/state_error_network"
        android:id="@+id/networkErrorState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <ListView
        android:id="@+id/channelList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</FrameLayout>